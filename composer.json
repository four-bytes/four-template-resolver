{
    "name": "four-bytes/four-template-resolver",
    "description": "Modern PHP template resolver with entity-based processing, hierarchical fallback, and multi-language support",
    "type": "library",
    "keywords": [
        "template",
        "templating",
        "php",
        "entity",
        "reflection",
        "multilingual",
        "marketplace"
    ],
    "homepage": "https://github.com/four-bytes/four-template-resolver",
    "license": "MIT",
    "authors": [
        {
            "name": "4 Bytes",
            "email": "info@4bytes.de"
        }
    ],
    "require": {
        "php": "^8.4",
        "psr/cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "squizlabs/php_codesniffer": "^3.7",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Four\\TemplateResolver\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Four\\TemplateResolver\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=8",
        "phpcs": "phpcs src tests --standard=PSR12",
        "phpcbf": "phpcbf src tests --standard=PSR12",
        "quality": [
            "@phpcs",
            "@phpstan"
        ],
        "quality-fix": [
            "@phpcbf"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}